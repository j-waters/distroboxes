FROM ghcr.io/ublue-os/arch-toolbox:latest

LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the toolbox or distrobox command" \
      summary="A cloud-native terminal experience" \
      maintainer="james@jcwaters.co.uk"

# 2. Create a non-root user named "builder"
RUN useradd -m builder && \
    echo "builder ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers.d/builder

WORKDIR /setup

# Copy the setup scripts and package list
COPY ../scripts/arch-packages.sh ../scripts/distrobox-shims.sh ../packages/arch.packages .

RUN chmod +x *.sh

RUN ./distrobox-shims.sh

# Run the setup scripts as build user (paru requires non-root)
USER builder
RUN ./arch-packages.sh

# Switch back to root for cleanup
USER root
WORKDIR /

# Clean up
RUN rm -R /setup && \
    userdel -r builder && \
    rm -r /etc/sudoers.d/builder && \
    rm -rf /tmp/*
