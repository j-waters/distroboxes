FROM ghcr.io/ublue-os/arch-toolbox:latest

LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the toolbox or distrobox command" \
      summary="A cloud-native terminal experience" \
      maintainer="james@jcwaters.co.uk"


# Create build user
RUN useradd -m --shell=/bin/bash build && usermod -L build && \
    echo "build ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers

# Copy the setup scripts and package list
COPY ../scripts/arch-packages.sh /setup/
COPY ../scripts/distrobox-shims.sh /setup/
COPY ../packages/arch.packages /setup/

WORKDIR /setup
RUN chmod +x *.sh

RUN ./distrobox-shims.sh

# Run the setup scripts
USER build
RUN ./arch-packages.sh

USER root

# Clean up
RUN rm -R /setup && \
    userdel -r build && \
    sed -i '/build ALL=(ALL) NOPASSWD: ALL/d' /etc/sudoers && \
    rm -rf /tmp/*
